{
  "name": "nest-prisma-docker",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "build": "tsc",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
